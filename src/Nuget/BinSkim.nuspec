<?xml version="1.0"?>
<package >
  <metadata>
    <id>Microsoft.CodeAnalysis.BinSkim</id>
    <version>$version$</version>
    <title>Microsoft BinSkim Binary Analysis Tool</title>
    <authors>@michaelcfanning,@nguerrera,@billyoneal</authors>
    <owners>@michaelcfanning,@nguerrera</owners>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>A correctness and security checker for Windows portable executables</description>
    <releaseNotes>Version $version$ of BinSkim</releaseNotes>
    <copyright>Copyright Microsoft 2015</copyright>    
    <licenseUrl>https://github.com/microsoft/binskim/blob/master/LICENSE</licenseUrl>
    <projectUrl>https://github.com/microsoft/binskim</projectUrl>
    <tags>Binary,Analysis,binskim,binscope</tags>
  </metadata>
  <files>
	<!-- NOTE: the exclude attribute must be on a single line -->
	<file src="bld\bin\AnyCPU_$configuration$\**\*"
          target="tools"
          exclude="**\BaselineTestsData\**\*;**\FunctionalTestsData\**\*;**\xunit.*;**\*Tests.*;"/>

    <!-- Restore the netstandard assemblies from the package cache -->
    <file src="src\packages\CommandLineParser\2.2.0\lib\netstandard1.5\CommandLine.*" target="tools\netcoreapp2.0" />
    <file src="src\packages\CommandLineParser\2.2.0\lib\netstandard1.5\CommandLine.*" target="tools\netstandard2.0" />
    <file src="src\packages\newtonsoft.json\10.0.3\lib\netstandard1.3\Newtonsoft.Json.*" target="tools\netcoreapp2.0" />
    <file src="src\packages\newtonsoft.json\10.0.3\lib\netstandard1.3\Newtonsoft.Json.*" target="tools\netstandard2.0" />

	<!-- Do something here to include msdia libs -->

    <file src="src\ReleaseHistory.md" target="tools\ReleaseHistory.md" />
    <file src="src\BinaryParsers\**\*.cs" target="src\BinaryParsers" />
    <file src="src\BinSkim.Driver\**\*.cs" target="src\BinSkim.Driver" />
    <file src="src\BinSkim.Rules\**\*.cs" target="src\BinSkim.Rules" />
    <file src="src\BinSkim.Sdk\**\*.cs" target="src\BinSkim.Sdk" />
  </files>
</package>